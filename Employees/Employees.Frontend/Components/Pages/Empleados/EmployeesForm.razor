<EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />


    <MudTextField Label="Nombre"
                  @bind-Value="@Empleado.FirstName"
                  For="@(() => Empleado.FirstName)"
                  Class="mb-4" 
                  Required="true" />

    <MudTextField Label="Apellido"
                  @bind-Value="@Empleado.LastName"
                  For="@(() => Empleado.LastName)"
                  Class="mb-4"
                  Required="true" />



    <MudText Typo="Typo.subtitle1">Empleado Activo</MudText>

    <MudRadioGroup T="bool" @bind-SelectedValue="Empleado.IsActive" Class="mb-4">
        <MudRadio T="bool" Option="@(true)">Sí</MudRadio>
        <MudRadio T="bool" Option="@(false)">No</MudRadio>
    </MudRadioGroup>

    <ValidationMessage For="@(() => Empleado.IsActive)" />
 



    <MudDatePicker Label="Fecha de Contratación"
                   @bind-Date="Empleado.HireDate"
                   Class="mb-4"
                   Required="true" />

    <MudTextField Label="Salario"
                    @bind-Value="@Empleado.Salary"
                    For="@(() => Empleado.Salary)"
                    Class="mb-4"
                    Required="true"
                    Adornment="Adornment.Start"
                    AdornmentText="$"
                    Immediate="true"
                    MaxLength="10"
                    Pattern="^\d+(\.\d{1,2})?$"
                  HelperText="Ingrese un valor numérico con hasta dos decimales." />



    <MudButton Variant="Variant.Outlined"
               StartIcon="@Icons.Material.Filled.ArrowBack"
               Color="Color.Info"
               OnClick="ReturnAction">
        <MudHidden xs="true">
            Cancelar
        </MudHidden>
    </MudButton>

    <MudButton Variant="Variant.Outlined"
               StartIcon="@Icons.Material.Filled.Check"
               Color="Color.Primary"
               ButtonType="ButtonType.Submit">
        <MudHidden xs="true">
            Guardar Cambios
        </MudHidden>
    </MudButton>
</EditForm>

